pipeline {
    agent any
    environment {
        REACT_APP_VERSION = "1.0.${BUILD_ID}"
    }
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'my_playwright2'
                    reuseNode true
                }
            }
            steps {
                sh '''npm --version
                    node --version
                    npm ci
                    npm run build
                '''
            }
        }
        stage ('RunLocalTests') {

            parallel {
                stage('RunE2ETestsLocally') {
                    agent {
                        docker {
                            image 'my_playwright2'
                            reuseNode true
                        }
                    }
                    steps {
                        sh '''
                        echo "Carrying out local npm tests"
                    test -f build/index.html
                    npm test
                    '''
                    }
                    post {
                        always {
                            junit 'test-results/junit.xml'
                        }
                    }
                    
                }
                stage('RunPlaywrightLocally') {
                    agent {
                        docker {
                            image 'my_playwright2'
                            reuseNode true
                        }
                    }
                    steps {
                        sh '''
                        echo "Playwright test"
                        serve -s build &
                        sleep 10
                    npx playwright test --reporter=html
                    '''
                    }
                    post {
                        always {
                            publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, icon: '', keepAll: false, reportDir: 'playwright-report', reportFiles: 'index.html', reportName: 'Playwright Report', reportTitles: '', useWrapperFileDirectly: true])
                        }
                    }
                    
                }
            }
        }
        
        stage('AWSStagingDepoloymentAndTest') {
            agent {
                docker {
                    image 'amazon/aws-cli'
                    reuseNode true
                    args "--entrypoint='"
                }
            }
            environment {
                JENKINS_BUCKET_URI = "jenkins-aws2"
                JENKINS_REGION = "eu-north-1"
                CI_ENVIRONMENT_URL = "https://${JENKINS_BUCKET_URI}.s3.${JENKINS_REGION}.amazonaws.com/index.html"
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'jenkins-aws', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                    aws --version
                    aws s3 sync build s3://$JENKINS_BUCKET_URI/ &
                    sleep 30
                    echo "Starting Playwright tests"
                    npx playwright test --reporter=html
                    '''
                }
                post {
                    always {
                        publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, icon: '', keepAll: false, reportDir: 'playwright-report', reportFiles: 'index.html', reportName: 'Playwright AWS Staging Report', reportTitles: '', useWrapperFileDirectly: true])
                    }
                    }
            }
        }
        
    }
}
