pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'my_playwright2'
                    reuseNode true
                }
            }
            steps {
                sh '''npm --version
                    node --version
                    npm ci
                    npm run build
                '''
            }
        }
        stage ('RunLocalTests') {

            parallel {
                stage('RunE2ETestsLocally') {
                    agent {
                        docker {
                            image 'my_playwright2'
                            reuseNode true
                        }
                    }
                    steps {
                        sh '''
                        echo "Carrying out local npm tests"
                    test -f build/index.html
                    npm test
                    '''
                    }
                    post {
                        always {
                            junit 'test-results/junit.xml'
                        }
                    }
                    
                }
                stage('RunPlaywrightLocally') {
                    agent {
                        docker {
                            image 'my_playwright2'
                            reuseNode true
                        }
                    }
                    steps {
                        sh '''
                        echo "Playwright test"
                        serve -s build &
                        sleep 10
                    npx playwright test --reported=html
                    '''
                    }
                    post {
                        always {
                            publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, icon: '', keepAll: false, reportDir: 'playwright-report', reportFiles: 'index.html', reportName: 'Playwright Report', reportTitles: '', useWrapperFileDirectly: true])
                        }
                    }
                    
                }
            }
        }
        
        
    }
}
